{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "./",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "db": ["./db/bin/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],

}